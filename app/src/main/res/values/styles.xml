<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomOverflow</item>
    </style>

    <style name="CustomOverflow">
        <item name="android:src">@drawable/more</item>
    </style>

    <style name="event_item_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_title">
        <item name="android:fontFamily">@font/gotham_rounded_book</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_subtitle">
        <item name="android:fontFamily">@font/gotham_rounded_medium</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_body">
        <item name="android:fontFamily">@font/gotham_rounded_light</item>
        <item name="android:textColor">#1B1B1B</item>
    </style>
</resources>